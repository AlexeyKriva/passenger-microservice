<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="version1-1" author="postgres">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="passenger"/>
            </not>
        </preConditions>

        <createTable tableName="passenger">
            <column name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(55)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone_number" type="varchar(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="is_deleted" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="version1-2" author="postgres">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="passenger_rating"/>
            </not>
        </preConditions>

        <createTable tableName="passenger_rating">
            <column name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="passenger_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_passenger_rating_passenger" references="passenger(id)"/>
            </column>
            <column name="rating_value" type="decimal(1,1)" defaultValue="0.0">
                <constraints nullable="false"/>
            </column>
            <column name="number_of_ratings" type="bigint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="version1-3" author="postgres">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="passenger_account"/>
            </not>
        </preConditions>

        <createTable tableName="passenger_account">
            <column name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="passenger_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_passenger_account_passenger" references="passenger(id)"/>
            </column>
            <column name="balance" type="decimal(10,2)" defaultValue="0.00">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="version1-19" author="postgres">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists columnName="version" tableName="passenger_account"/>
            </not>
        </preConditions>

        <addColumn tableName="passenger_account">
            <column name="version" type="bigint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>